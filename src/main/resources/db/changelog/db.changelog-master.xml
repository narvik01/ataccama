<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="ohamak" id="someUniqueId">

        <createTable tableName="connections">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="clob">
                <constraints nullable="false"/>
            </column>

            <column name="hostname" type="clob">
                <constraints nullable="false"/>
            </column>

            <column name="port" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="database_name" type="clob">
                <constraints nullable="false"/>
            </column>

            <column name="username" type="clob">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="clob">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>